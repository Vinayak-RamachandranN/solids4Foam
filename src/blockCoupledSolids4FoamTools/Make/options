ifeq ($(WM_PROJECT), foam)
    FOAM_FLAVOUR = FOAMEXTEND
else
    # openfoam.com has -DOPENFOAM= in its flags, or version vYYMM
    ifneq (,$(findstring -DOPENFOAM=,$(GFLAGS)))
        FOAM_FLAVOUR = OPENFOAM_COM
    else ifneq (,$(findstring v,$(WM_PROJECT_VERSION)))
        FOAM_FLAVOUR = OPENFOAM_COM
    else
        FOAM_FLAVOUR = OPENFOAM_ORG
    endif
endif
ifeq (FOAMEXTEND, $(FOAM_FLAVOUR))
    VERSION_SPECIFIC_INC = -DFOAMEXTEND
else
    VERSION_SPECIFIC_INC = -DOPENFOAM_NOT_EXTEND
    ifeq ($(FOAM_FLAVOUR), OPENFOAM_COM)
        VERSION_SPECIFIC_INC += -DOPENFOAM_COM
    else
        VERSION_SPECIFIC_INC += -DOPENFOAM_ORG
    endif
endif

ifdef S4F_NO_USE_EIGEN
    VERSION_SPECIFIC_INC += -DS4F_NO_USE_EIGEN
else
    VERSION_SPECIFIC_INC += -I../../ThirdParty/eigen3
endif

EXE_INC = \
    -std=c++14 \
    -Wno-old-style-cast -Wno-deprecated-declarations \
    $(VERSION_SPECIFIC_INC) \
    -I../solids4FoamModels/lnInclude \
    -I$(LIB_SRC)/meshTools/lnInclude \
    -I$(LIB_SRC)/finiteVolume/lnInclude \
    -I$(LIB_SRC)/finiteArea/lnInclude \
    -I$(LIB_SRC)/sampling/lnInclude \
    -I$(LIB_SRC)/dynamicMesh/dynamicMesh/lnInclude \
    -I$(LIB_SRC)/dynamicMesh/dynamicFvMesh/lnInclude \
    -I$(LIB_SRC)/dynamicMesh/topoChangerFvMesh/lnInclude \
    -I$(LIB_SRC)/lagrangian/lnInclude \
    -I$(LIB_SRC)/sampling/lnInclude

LIB_LIBS = \
    -lfiniteVolume \
    -ldynamicFvMesh \
    -ldynamicMesh \
    -lmeshTools \
    -ltopoChangerFvMesh
